        <shape android:shape="rectangle" android:innerRadius="1dp">
            <solid android:color="@color/detail_info_fill_color_nor"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:innerRadius="1dp">
            <solid android:color="@color/detail_info_fill_color_foc"/>
