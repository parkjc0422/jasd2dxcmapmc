<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.travelinfo.DetailTravelInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <ImageView
                    android:id="@+id/detail_travel_info_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/detail_travel_info_share"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_detail_share"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="57dp"
                    android:layout_height="26dp" />
            </RelativeLayout>


            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/detail_travel_info_title"
                android:textSize="15dp"
                android:fontFamily="sans-serif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_travel_info_address"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:fontFamily="sans-serif"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_travel_info_info1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginBottom="11dp"
                android:layout_marginTop="12dp"
                android:background="@color/common_bound_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="42dp">
                <Button
                    android:fontFamily="sans-serif"
                    android:text="@string/travel_detail_info_btn1"
                    android:id="@+id/detail_travel_info_menu1"
                    android:background="@drawable/detail_travel_info_btn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="42dp" />
                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />
                <Button
                    android:fontFamily="sans-serif"
                    android:text="@string/travel_detail_info_btn2"
                    android:id="@+id/detail_travel_info_menu2"
                    android:background="@drawable/detail_travel_info_btn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="42dp" />
                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />
                <Button
                    android:fontFamily="sans-serif"
                    android:text="@string/travel_detail_info_btn3"
                    android:id="@+id/detail_travel_info_menu3"
                    android:background="@drawable/detail_travel_info_btn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="42dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/detail_travel_info_info2"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>