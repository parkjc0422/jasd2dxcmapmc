<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.CouponFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/coupon_menu_1"
            android:layout_margin="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/ic_list_search"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/top_title"
                android:layout_marginLeft="10dp"
                android:text="@string/coupon_menu_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@color/common_bound_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/coupon_menu_2"
            android:layout_margin="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/ic_list_coupon"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/top_title"
                android:layout_marginLeft="10dp"
                android:text="@string/coupon_menu_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@color/common_bound_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/coupon_menu_3"
            android:layout_margin="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/ic_list_guide"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/top_title"
                android:layout_marginLeft="10dp"
                android:text="@string/coupon_menu_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@color/common_bound_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
</FrameLayout>